<% if cat_rental_request.persisted? %>
  <% action_val = cat_rental_request_url(cat_rental_request) %>
  <% button_val = "Edit this kat rental request" %>
<% else %>
  <% action_val = cat_rental_requests_url %>
  <% button_val = "Create this kat rental request" %>
<% end %>

<form class="" action="<%=action_val%>" method="post">
  <% if cat_rental_request.persisted? %>
    <input type="hidden" name="_method" value="patch" >
  <% end %>
  <table>
    <tbody>
      <tr>
        <td class="column">
          <label for="cat_id">Cat</label>
        </td>
        <td class="col_val">
          <select class="" id="cat_id" name="cat_rental_request[cat_id]">
            <option value="" <%= cat_rental_request.id == "Blank" ? "selected" : "" %> >-- select a cat --</option>
            <% cats.each do |cat| %>
              <option value="<%= cat.id %> <%= cat_rental_request.cat_id == cat.id ? "selected" : "" %>">
                 <%=cat.name%>
               </option>
            <% end %>
          </select>
        </td>
      </tr>
      <tr>
        <td class="column">
          <label for="start_date"> Start Date </label>
        </td>
        <td class="col_val">
          <input type="date" id="start_date" name="cat_rental_request[start_date]" value="<%= cat_rental_request.start_date %>">
        </td>
      </tr>
      <tr>
        <td class="column">
          <label for="end_date"> End Date </label>
        </td>
        <td class="col_val">
          <input type="date" id="end_date" name="cat_rental_request[end_date]" value="<%= cat_rental_request.end_date %>">
        </td>
      </tr>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="2">
          <input type="submit" name="submit_button" value="<%=button_val%>">
        </td>
      </tr>
    </tfoot>
  </table>

</form>
